<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comtainerborderbakbak">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/allback_border_header"
        >
        <ImageView
            android:id="@+id/iv_close_quanxiang"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/quit"
            android:onClick="quanxiangBtnClick"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:text="全向红外发射接收器"
            android:shadowDy="10"
            android:shadowDx="10"
            android:shadowColor="@color/colorDeepBlue"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="#ffffff"/>

    </LinearLayout>
    <GridLayout
        android:id="@+id/container_quanxiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="10"
        android:columnCount="10"
        >

    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/refresh_quanxiang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textSize="25dp"
            android:text="刷新控制"
            android:textColor="@color/colorWhitedeep"
            android:background="@drawable/blue_btn"
            android:onClick="quanxiangBtnClick"/>
        <Button
            android:id="@+id/study_quanxiang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textSize="25dp"
            android:text="学习控制"
            android:textColor="@color/colorWhitedeep"
            android:background="@drawable/blue_btn"
            android:onClick="quanxiangBtnClick"/>
        <Button
            android:id="@+id/send_quanxiang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="发射控制"
            android:textSize="25dp"
            android:textColor="@color/colorWhitedeep"
            android:background="@drawable/blue_btn"
            android:onClick="quanxiangBtnClick"/>
        <Button
            android:id="@+id/clear_one_quanxiang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="清除单个"
            android:textSize="25dp"
            android:textColor="@color/colorWhitedeep"
            android:background="@drawable/blue_btn"
            android:onClick="quanxiangBtnClick"/>
        <Button
            android:id="@+id/clear_all_quanxiang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="清除全部"
            android:textSize="25dp"
            android:textColor="@color/colorWhitedeep"
            android:background="@drawable/blue_btn"
            android:onClick="quanxiangBtnClick"/>
    </LinearLayout>
</LinearLayout>